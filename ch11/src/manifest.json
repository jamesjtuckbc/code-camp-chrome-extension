{
    "name": "OmniTool",
    "description": "Extension for various shortcuts in Omni CMS",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus",
        "declarativeContent",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/mc-16x16.png",
            "32": "/images/mc-32x32.png",
            "96": "/images/mc-96x96.png",
            "192": "/images/mc-192x192.png"
        }
    },
    "icons": {
        "16": "/images/mc-16x16.png",
        "32": "/images/mc-32x32.png",
        "96": "/images/mc-96x96.png",
        "192": "/images/mc-192x192.png"
    },
    "options_page": "options.html"
}